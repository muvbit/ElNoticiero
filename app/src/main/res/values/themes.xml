<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ElNoticiero" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Barras del sistema -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- AppBar styling (versión compatible) -->
        <item name="toolbarStyle">@style/Widget.ElNoticiero.Toolbar</item>

        <!-- BottomAppBar styling -->
        <item name="bottomAppBarStyle">@style/Widget.ElNoticiero.BottomAppBar</item>

        <!-- Diálogos -->
        <item name="alertDialogTheme">@style/Theme.ElNoticiero.Dialog</item>
    </style>

    <!-- Estilo para Toolbar/AppBar -->
    <style name="Widget.ElNoticiero.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/black</item>
        <item name="navigationIconTint">@color/black</item>
    </style>

    <!-- Estilo para BottomAppBar -->
    <style name="Widget.ElNoticiero.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@color/white</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <!-- Tema para diálogos -->
    <style name="Theme.ElNoticiero.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.ElNoticiero" parent="Base.Theme.ElNoticiero" />
</resources>