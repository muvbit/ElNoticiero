<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CardView principal con info actual -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header con ubicación y fecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDetailedLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Madrid, Comunidad de Madrid"
                        android:textColor="@color/primaryText"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Martes, 24 de Mayo 2023"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Condición actual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDetailedWeatherIcon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_weather_sunny_large" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDetailedTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22°C"
                            android:textColor="@color/primaryText"
                            android:textSize="48sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDetailedWeatherCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Soleado"
                            android:textColor="@color/secondaryText"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvFeelsLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Sensación: 21°C"
                            android:textColor="@color/secondaryText"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Detalles extendidos -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:columnCount="2"
                    android:rowCount="3">

                    <!-- Fila 1 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:drawableStart="@drawable/ic_humidity"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/primaryDark"
                        android:text="Humedad"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDetailedHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:gravity="end"
                        android:text="65%"
                        android:textColor="@color/primaryText"
                        android:textSize="14sp" />

                    <!-- Fila 2 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_marginTop="12dp"
                        android:drawableStart="@drawable/ic_wind"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/primaryDark"
                        android:text="Viento"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDetailedWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_marginTop="12dp"
                        android:gravity="end"
                        android:text="12 km/h SO"
                        android:textColor="@color/primaryText"
                        android:textSize="14sp" />

                    <!-- Fila 3 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:layout_marginTop="12dp"
                        android:drawableStart="@drawable/ic_pressure"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/primaryDark"
                        android:text="Presión"
                        android:textColor="@color/secondaryText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDetailedPressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:layout_marginTop="12dp"
                        android:gravity="end"
                        android:text="1018 hPa"
                        android:textColor="@color/primaryText"
                        android:textSize="14sp" />
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pronóstico por horas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="PRONÓSTICO POR HORAS"
            android:textAllCaps="true"
            android:textColor="@color/secondaryText"
            android:textSize="12sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/hourlyForecastContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Pronóstico por días -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="PRONÓSTICO 7 DÍAS"
            android:textAllCaps="true"
            android:textColor="@color/secondaryText"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/dailyForecastContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>