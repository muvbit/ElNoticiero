<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tvBuildNumVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="10sp"
        android:textStyle="bold"
        android:padding="2dp"
        />
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvVersion"
        android:padding="2dp"
        android:textSize="10sp"
        android:text="ElNoticiero"
        />
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvBuildNumVersion"
        android:padding="2dp"
        android:textSize="10sp"
        android:text="version"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allRightsReserved"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvBuildNumVersion"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="textEnd"
        android:textSize="10sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>